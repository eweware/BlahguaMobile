<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_frame_two"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F2B2F"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F2B2F"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/avatar"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_avatar_sample"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#1FBBD1"
            android:text="ultradad" />
        <ListView
            android:id="@+id/listProfileMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3F2B2F"
            android:textColor="#FFFFFF"
            android:listSelector="@drawable/list_item_selector" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="@string/profilemenu_logout"
        android:gravity="left"
        android:layout_marginRight="5dp" />
</LinearLayout>