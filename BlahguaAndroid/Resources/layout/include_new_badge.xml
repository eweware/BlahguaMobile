<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D9DADA"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/section_badge_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_new_badge_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:text="@string/new_badge_title" />
            <EditText
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3C3C3C"
                android:textCursorDrawable="@null"
                android:hint="@string/new_badge_edit_email"
                android:background="@drawable/edit"
                android:inputType="textEmailAddress"
                android:paddingBottom="10dp" />
            <TextView
                android:id="@+id/text_privacy_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="14sp"
                android:padding="5dp"
                android:text="@string/new_badge_title_privacy_statement" />
            <Button
                android:id="@+id/btn_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_green"
                android:textColor="@drawable/btn_colored_text"
                android:textStyle="bold"
                android:text="@string/btn_submittext" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/section_badge_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_new_badge_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:text="@string/confirm_message" />
            <EditText
                android:id="@+id/badge_codeField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3C3C3C"
                android:textCursorDrawable="@null"
                android:hint="@string/new_badge_edit_code"
                android:background="@drawable/edit"
                android:inputType="textNoSuggestions"
                android:paddingBottom="10dp" />
            <Button
                android:id="@+id/btn_verify_done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_green"
                android:textColor="@drawable/btn_colored_text"
                android:textStyle="bold"
                android:text="@string/btn_verifytext" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/section_badge_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_new_badge_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="14sp"
                android:paddingBottom="5dp"
                android:text="@string/request_message" />
            <Button
                android:id="@+id/btn_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_green"
                android:textColor="@drawable/btn_colored_text"
                android:textStyle="bold"
                android:text="string/btn_requesttext" />
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>