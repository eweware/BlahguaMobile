<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:orientation="vertical">
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <!-- AUTHOR BLOCK -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="5dp"
                android:background="#F3F3F3"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/author_avatar"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:layout_margin="3dp"
                        android:background="@drawable/ico_profile" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/author"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:textColor="#000"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                android:text="" />
                            <ImageView
                                android:id="@+id/badges_icon"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_margin="3dp"
                                android:visibility="gone"
                                android:background="@drawable/badge_icon" />
                            <TextView
                                android:id="@+id/timeago"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="3dp"
                                android:gravity="right"
                                android:textColor="#000"
                                android:textStyle="italic"
                                android:textSize="13sp"
                                android:text="" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/author_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dp"
                            android:textColor="#000"
                            android:textSize="13sp"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>
                <ListView
                    android:id="@+id/badges_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>
        <!-- TITLE -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:autoLink="web" />
        <!-- IMAGE -->
            <BlahguaMobile.AndroidClient.HelpingClasses.ResizableImageView
                android:id="@+id/blah_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/tiny"
                android:adjustViewBounds="true"
                android:visibility="gone" />
        <!-- MESSAGE -->
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="16sp"
                android:textColor="#000"
                android:autoLink="all" />
        <!-- PREDICTS -->
            <LinearLayout
                android:id="@+id/predicts_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="5dp"
                android:background="#F3F3F3"
                android:orientation="vertical"
                android:visibility="gone">
                <ListView
                    android:id="@+id/predicts_votes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/predicts_datebox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="" />
                <TextView
                    android:id="@+id/predicts_elapsedtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="" />
            </LinearLayout>
        <!-- POLLS -->
            <LinearLayout
                android:id="@+id/polls_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:padding="5dp"
                android:background="#F3F3F3"
                android:orientation="vertical"
                android:visibility="gone">
                <ListView
                    android:id="@+id/polls_votes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>