<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#EAEAEA"
  android:orientation="vertical">
  
  <!-- TITLEBAR -->
  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#3F2B2F">
    <Button
      android:id="@+id/btn_menu"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_gravity="left"
      android:layout_marginLeft="8dp"
      android:layout_marginTop="8dp"
      android:background="@drawable/btn_menu" />
    <TextView
      android:id="@+id/main_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:textSize="16sp"
      android:textColor="#60BFA4"
      android:textStyle="bold"
      android:text="Public" />
    <ProgressBar
      android:id="@+id/progress_actionbar"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right"
      android:padding="5dp"
      android:layout_centerHorizontal="true"
      android:visibility="gone" />
    <Button
      android:id="@+id/btn_login"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right"
      android:background="@null"
      android:textSize="14sp"
      android:textColor="#60BFA4"
      android:padding="10dp"
      android:text="Log In" />
    <LinearLayout
      android:id="@+id/registered_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="right"
      android:orientation="horizontal"
      android:visibility="gone">
      <ImageView
        android:id="@+id/btn_newpost"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:background="#60BFA4"
        android:src="@drawable/icon_createpost" />
      <ImageView
        android:id="@+id/avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#777"
        android:scaleType="fitXY" />
    </LinearLayout>
  </FrameLayout>
  
  <!-- CREATEPOST -->
  <include
    layout="@layout/include_create_post"
    android:id="@+id/create_post_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="false"
    android:visibility="gone" />

  <!-- MAIN AREA -->
  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
      
    <ScrollView
      android:id="@+id/BlahScroller"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/texture_01"
      android:tileMode="repeat">
      <LinearLayout
        android:id="@+id/BlahContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />
    </ScrollView>
      
    <View
      android:id="@+id/BlahGrayed"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#99000000" />

    <ProgressBar
      android:id="@+id/loader_main"
      android:indeterminate="true"
      style="?android:attr/progressBarStyleLarge"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:indeterminateDrawable="@drawable/progress_smiley"
      android:layout_gravity="center"
      android:visibility="gone"/>
      
  </FrameLayout>
</LinearLayout>