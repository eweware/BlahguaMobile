<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#15b568">
        <Button
            android:id="@+id/btn_menu"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:background="@drawable/btn_menu" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:text="Roll" />
        <ProgressBar
          android:id="@+id/progress_actionbar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right"
          android:padding="5dp"
          android:layout_centerHorizontal="true"
          android:visibility="gone" />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@null"
            android:textSize="14sp"
            android:textColor="@drawable/color_white_button_text"
            android:padding="10dp"
            android:text="Log In" />
        <LinearLayout
            android:id="@+id/registered_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageView
                android:id="@+id/avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#777"
                android:scaleType="fitXY" />
            <Button
                android:id="@+id/btn_newpost"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:background="@drawable/btn_newpost" />
        </LinearLayout>
    </FrameLayout>
    <include
        layout="@layout/include_create_post"
        android:id="@+id/create_post_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />
    <ScrollView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/BlahScroller">
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/BlahContainer" />
    </ScrollView>
</LinearLayout>