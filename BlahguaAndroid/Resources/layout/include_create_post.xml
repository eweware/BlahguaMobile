<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="5dp"
      android:orientation="vertical"
      android:background="@drawable/bg_create_comment">
      <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3C3C3C"
        android:textStyle="bold"
        android:textSize="14sp"
        android:hint="TYPE HEADLINE (64)"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginBottom="3dp"/>
      <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E4E4E4" />

      <EditText
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="80dp"
        android:textColor="#3C3C3C"
        android:textSize="13sp"
        android:hint="Type body text"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:lines="5"
        android:minLines="5"
        android:gravity="top|left"
        android:background="@null"
        android:layout_marginBottom="3dp"/>

      <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E4E4E4" />
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="#3C3C3C"
            android:textSize="14sp"
            android:text="Select image" />

        <View
          android:layout_width="2px"
          android:layout_height="match_parent"
          android:background="#E4E4E4" />

        <Button
            android:id="@+id/btn_signature"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@null"
            android:textColor="#3C3C3C"
            android:textSize="14sp"
            android:text="Select signature"/>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
      android:id="@+id/additionalfields_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginBottom="5dp"
      android:background="@drawable/bg_create_comment">
      <EditText
        android:id="@+id/prediction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3C3C3C"
        android:textSize="13sp"
        android:hint="Type prediction expiration date (mm/dd/yyyy)"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginBottom="3dp"/>
      <EditText
        android:id="@+id/poll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3C3C3C"
        android:textSize="13sp"
        android:hint="Type poll option #1"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginBottom="3dp"/>
      <EditText
        android:id="@+id/poll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3C3C3C"
        android:textSize="13sp"
        android:hint="Type poll option #2"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginBottom="3dp"/>
      <EditText
        android:id="@+id/poll3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3C3C3C"
        android:textSize="13sp"
        android:hint="Type poll option #3"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginBottom="3dp"/>
      <EditText
        android:id="@+id/poll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3C3C3C"
        android:textSize="13sp"
        android:hint="Type poll option #4"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginBottom="3dp"/>
      <EditText
        android:id="@+id/poll5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3C3C3C"
        android:textSize="13sp"
        android:hint="Type poll option #5"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginBottom="3dp"/>
      <EditText
        android:id="@+id/poll6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3C3C3C"
        android:textSize="13sp"
        android:hint="Type poll option #6"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginBottom="3dp"/>
      <EditText
        android:id="@+id/poll7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3C3C3C"
        android:textSize="13sp"
        android:hint="Type poll option #7"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginBottom="3dp"/>
      <EditText
        android:id="@+id/poll8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3C3C3C"
        android:textSize="13sp"
        android:hint="Type poll option #8"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginBottom="3dp"/>
      <EditText
        android:id="@+id/poll9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3C3C3C"
        android:textSize="13sp"
        android:hint="Type poll option #9"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginBottom="3dp"/>
      <EditText
        android:id="@+id/poll10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#3C3C3C"
        android:textSize="13sp"
        android:hint="Type poll option #10"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginBottom="3dp"/>
      <Button
        android:id="@+id/btn_add_poll_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:textStyle="bold"
        android:textColor="#3C3C3C"
        android:textSize="13sp"
        android:paddingLeft="10dp"
        android:gravity="left|center_vertical"
        android:text="+ Add more options" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_green"
        android:textColor="#FFF"
        android:text="DONE"/>
  </LinearLayout>
</ScrollView>
