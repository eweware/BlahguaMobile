<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical">
    <!--<TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#D9DADA"
      android:paddingLeft="10dp"
      android:paddingRight="10dp"
      android:paddingTop="10dp"
      android:textColor="#000"
      android:textStyle="bold"
      android:text="Statistics"/> -->
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="#D9DADA"
      android:padding="10dp"
      android:textColor="#000"
      android:text="Key statistical data for this user. The user score is an overall rating computed by assigning different weights to different data metrics."/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">
        <!-- SCORE -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="5dp"
          android:orientation="horizontal">
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:textStyle="bold"
              android:text="User score:"/>
          <TextView
              android:id="@+id/score"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:textStyle="bold"
              android:text="0.0"/>
        </LinearLayout>

        <!-- USERVIEWS -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="5dp"
          android:orientation="horizontal">
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="User Views count:"/>
          <TextView
              android:id="@+id/userviews"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="0"/>
        </LinearLayout>
        <!-- USEROPENS -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="5dp"
          android:orientation="horizontal">
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="User Opens count:"/>
          <TextView
              android:id="@+id/useropens"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="0"/>
        </LinearLayout>
        <!-- USERCREATES -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="5dp"
          android:orientation="horizontal">
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="User Creates count:"/>
          <TextView
              android:id="@+id/usercreates"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="0"/>
        </LinearLayout>
        <!-- USERCOMMENTS -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="5dp"
          android:orientation="horizontal">
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="User Comments count:"/>
          <TextView
              android:id="@+id/usercomments"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="0"/>
        </LinearLayout>
        
        <!-- VIEWS -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="5dp"
          android:orientation="horizontal">
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="Views count:"/>
          <TextView
              android:id="@+id/views"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="0"/>
        </LinearLayout>
        <!-- OPENS -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="5dp"
          android:orientation="horizontal">
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="Opens count:"/>
          <TextView
              android:id="@+id/opens"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="0"/>
        </LinearLayout>
        <!-- COMMENTS -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="5dp"
          android:orientation="horizontal">
          <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="Comments count:"/>
          <TextView
              android:id="@+id/comments"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="0"/>
        </LinearLayout>
        
      </LinearLayout>
    </ScrollView>
</LinearLayout>