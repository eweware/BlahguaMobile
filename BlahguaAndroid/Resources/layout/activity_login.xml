<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/scrollView1"
    android:animateLayoutChanges="true"
    android:padding="8dp"
    android:focusable="true"
    android:background="@color/heard_white">
    <ImageView
        android:src="@drawable/Logo_master_teal"
        android:layout_width="wrap_content"
        android:id="@+id/imageView1"
        android:layout_gravity="center"
        android:layout_height="96dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />
    <TextView
        android:text="Welcome!  Get started with an account:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView1"
        android:textColor="@color/heard_black"
        android:typeface="normal"
        android:textSize="18dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usernameField"
        android:background="@null"
            android:padding="10dp"
        android:textColor="@color/heard_black"
        android:hint="username" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/heard_black"
        android:background="@null"
            android:padding="10dp"
        android:id="@+id/password"
        android:hint="password" />
    <Button
        android:text="Sign In"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signInBtn"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:background="@color/heard_blue"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/password2"
                    android:padding="10dp"
            android:background="@null"
        android:textColor="@color/heard_black"
        android:hint="confirm password" />
    <TextView
        android:text="@string/smallText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/heard_black"
        android:id="@+id/emailPrompt"
        android:layout_marginTop="16dp"
        android:typeface="normal"
        android:textSize="14dp" />
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
            android:padding="10dp"
        android:id="@+id/emailAddrField"
        android:textColor="@color/heard_black"
        android:hint="email (optional)" />
    <Button
        android:text="@string/createAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createBtn"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:background="@color/heard_blue"
        android:layout_marginBottom="16dp" />
    <TextView
        android:text="already have an account?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prepSignIn"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:textColor="@color/heard_blue"
        android:textSize="18dp" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_horizontal"
        android:background="#60BFA4"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_help"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="16sp"
            android:textColor="@drawable/color_white_button_text"
            android:textStyle="bold"
            android:text="@string/signin_help_btn" />
        <Button
            android:id="@+id/btn_about"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@drawable/color_white_button_text"
            android:text="@string/signin_about_btn" />
        <Button
            android:id="@+id/btn_report"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@drawable/color_white_button_text"
            android:text="@string/signin_report_btn" />
    </LinearLayout>
</LinearLayout>