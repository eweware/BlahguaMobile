<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gray_gradient"
    android:orientation="vertical">
    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:background="#3F2B2F">
      <Button
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@null"
        android:textSize="14sp"
        android:textColor="@drawable/color_white_button_text"
        android:padding="10dp"
        android:visibility="gone"
        android:text="Cancel" />
      <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#60BFA4"
        android:textStyle="bold"
        android:text="Login" />
      <Button
        android:id="@+id/btn_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@null"
        android:textSize="14sp"
        android:textColor="#60BFA4"
        android:padding="10dp"
        android:text="Done" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="vertical">
        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />
        <CheckBox
            android:id="@+id/check_create_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableLeft="@drawable/checkbox"
            android:drawablePadding="10dp"
            android:text="Create Account"
            android:textColor="#000"
            android:textStyle="bold" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp" />
        <EditText
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit"
            android:textCursorDrawable="@null"
            android:textColor="#3C3C3C"
            android:hint="Username" />
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit"
            android:inputType="textPassword"
            android:textCursorDrawable="@null"
            android:textColor="#3C3C3C"
            android:hint="Password" />
        <EditText
            android:id="@+id/password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit"
            android:inputType="textPassword"
            android:textCursorDrawable="@null"
            android:textColor="#3C3C3C"
            android:hint="Confirm password" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/check_remember_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember me?"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="12sp"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/checkbox"
                android:drawablePadding="5dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="#60BFA4"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="16sp"
            android:textColor="@drawable/color_white_button_text"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:text="HELP" />
        <Button
            android:id="@+id/btn_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@drawable/color_white_button_text"
            android:paddingLeft="10dp"
            android:text="ABOUT" />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_centerHorizontal="true" />
    </LinearLayout>
</LinearLayout>