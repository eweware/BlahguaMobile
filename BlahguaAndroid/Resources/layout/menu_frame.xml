<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menu_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C3C3C"
    android:orientation="vertical">
  <TextView
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:gravity="bottom"
      android:background="#15b568"
      android:textColor="#FFF"
      android:padding="5dp"
    android:textAppearance="@android:style/TextAppearance.Medium"
      android:text="@string/sidemenu_channels"/>
  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:textColor="#FFF"
    android:padding="5dp"
    android:textAppearance="@android:style/TextAppearance.Medium"
    android:text="@string/sidemenu_ch_public"
    android:gravity="left" />
  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:textColor="#FFF"
    android:padding="5dp"
    android:textAppearance="@android:style/TextAppearance.Medium"
    android:text="@string/sidemenu_ch_tech"
    android:gravity="left" />
  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:textColor="#FFF"
    android:padding="5dp"
    android:textAppearance="@android:style/TextAppearance.Medium"
    android:text="@string/sidemenu_ch_entertainment"
    android:gravity="left" />
  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:textColor="#FFF"
    android:padding="5dp"
    android:textAppearance="@android:style/TextAppearance.Medium"
    android:text="@string/sidemenu_ch_feedback"
    android:gravity="left" />


  <TextView
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="bottom"
    android:background="#15b568"
    android:text="@string/sidemenu_view"
    android:textColor="#FFF"
    android:padding="5dp"
    android:textAppearance="@android:style/TextAppearance.Medium" />
  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:textColor="#FFF"
    android:padding="5dp"
    android:textAppearance="@android:style/TextAppearance.Medium"
    android:text="@string/sidemenu_v_newest"
    android:gravity="left" />
  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:textColor="#FFF"
    android:padding="5dp"
    android:textAppearance="@android:style/TextAppearance.Medium"
    android:text="@string/sidemenu_v_oldest"
    android:gravity="left" />
  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:textColor="#FFF"
    android:padding="5dp"
    android:textAppearance="@android:style/TextAppearance.Medium"
    android:text="@string/sidemenu_v_most_popular"
    android:gravity="left" />
  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:textColor="#FFF"
    android:padding="5dp"
    android:textAppearance="@android:style/TextAppearance.Medium"
    android:text="@string/sidemenu_v_most_promoted"
    android:gravity="left" />
  <Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:textColor="#FFF"
    android:padding="5dp"
    android:textAppearance="@android:style/TextAppearance.Medium"
    android:text="@string/sidemenu_v_most_demoted"
    android:gravity="left" />
</LinearLayout>