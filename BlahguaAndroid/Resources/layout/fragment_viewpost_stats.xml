<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    android:orientation="vertical">
    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9DADA"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:text="@string/viewpost_stats_info_title" />
    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9DADA"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="#000"
        android:text="@string/viewpost_stats_info" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="5dp"
          android:orientation="vertical">
          <!-- SCORE -->
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
              android:id="@+id/t3"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:textStyle="bold"
              android:text="@string/viewpost_stats_heard_score" />
            <TextView
              android:id="@+id/score"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:textStyle="bold"
              android:text="0.0" />
          </LinearLayout>
          <!-- CONVERSION -->
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
              android:id="@+id/t4"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:textStyle="bold"
              android:text="@string/viewpost_stats_convers_ratio" />
            <TextView
              android:id="@+id/conversion"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:textStyle="bold"
              android:text="0.0" />
          </LinearLayout>
          <!-- IMPRESSION -->
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
              android:id="@+id/t5"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:textStyle="bold"
              android:text="@string/viewpost_stats_impressions" />
            <TextView
              android:id="@+id/impression"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:textStyle="bold"
              android:text="0.0" />
          </LinearLayout>
          <!-- VIEWS -->
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
              android:id="@+id/t6"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="@string/viewpost_stats_views_count" />
            <TextView
              android:id="@+id/views"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="0" />
          </LinearLayout>
          <!-- OPENS -->
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
              android:id="@+id/t7"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="@string/viewpost_stats_opens_count" />
            <TextView
              android:id="@+id/opens"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="0" />
          </LinearLayout>
          <!-- COMMENTS -->
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
              android:id="@+id/t8"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="@string/viewpost_stats_comments_count" />
            <TextView
              android:id="@+id/comments"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="0" />
          </LinearLayout>
          <!-- PROMOTES -->
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
              android:id="@+id/t9"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="@string/viewpost_stats_promotes" />
            <TextView
              android:id="@+id/promotes"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="0" />
          </LinearLayout>
          <!-- DEMOTES -->
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
              android:id="@+id/t10"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="@string/viewpost_stats_demotes" />
            <TextView
              android:id="@+id/demotes"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:textColor="#000"
              android:text="0" />
          </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>